{
    "manifest_version": 2,
    "name"            : "Charset Storage",
    "version"         : "0.0.0",
    "description"     : "",
    "author"          : "Susisu <susisu2413@yahoo.co.jp> (https://github.com/susisu)",
    "homepage_url"    : "https://github.com/susisu/Charset-Storage",
    "permissions"     : ["<all_urls>", "*://*/*", "activeTab", "tabs", "webRequest", "webRequestBlocking", "storage"],
    "icons"           : {

    },
    "browser_action"  : {
        "default_title": "Charset Storage"
    },
    "background"      : {
        "persistent": true,
        "scripts"   : ["background.js"]
    },
    "content_scripts" : [
        {
            "matches": ["<all_urls>"],
            "js"     : ["content.js"]
        }
    ]
}
